{
  "version": "0.0.1",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "lint-staged",
    "prepare": "husky install && tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx test && tsdx lint"
    }
  },
  "lint-staged": {
    "*.(js|ts)": "eslint --fix"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@codebase912/multi-step-form",
  "description": "A library that makes building multi-step forms quick and easy",
  "author": "Tshepo Tsilo",
  "module": "dist/@codebase912/multi-step-form.esm.js",
  "size-limit": [
    {
      "path": "dist/@codebase912/multi-step-form.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/@codebase912/multi-step-form.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@testing-library/dom": "^8.13.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@types/jest": "^27.5.1",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "eslint": "^8.15.0",
    "husky": "^8.0.0",
    "lint-staged": "^12.4.1",
    "size-limit": "^7.0.8",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4"
  }
}
